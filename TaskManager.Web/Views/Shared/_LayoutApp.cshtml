@* ---------------------------------------------------------------------------
    File:   Views/Shared/_LayoutApp.cshtml
    Layout base para todos los módulos “in-app” (Backlog, Kanban-Board, …)
    -------------------------------------------------------------------------*@

@using System.Web.Optimization

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />

    <title>@ViewBag.Title | TaskManager</title>

    <!-- 1 · CSS global (Bootstrap) -->
    @Styles.Render("~/Content/bootstrap")

    <!-- 2 · Icon-font (Font Awesome 6.5.1) *sin* SRI para evitar bloqueos en dev -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />

    <!-- 3 · Estilos comunes del sitio -->
    @Styles.Render("~/Content/site")

    <!-- 4 · Estilos del side-menu -->
    @Styles.Render("~/Content/sideMenu-css")

    <!-- 5 · Estilos específicos de la vista (opcionales) -->
    @RenderSection("styles", required: false)
</head>

<body>
    <!-- Top-bar + drawer lateral -->
    @Html.Partial("~/Views/Shared/Partials/_SideMenu.cshtml")

    <!-- Contenido principal
         (pt-5: separa el contenido de la barra superior fija) -->
    <main class="container app-content pt-5">
        @RenderBody()
    </main>

    <!-- 1 · Librerías compartidas (jQuery + Bootstrap.bundle.js) -->
    @Scripts.Render("~/bundles/lib")

    <!-- 2 · Lógica del side-menu -->
    @Scripts.Render("~/bundles/sideMenu-js")

    <!-- 3 · Scripts específicos de la vista (opcionales) -->
    @RenderSection("scripts", required: false)
</body>
</html>
